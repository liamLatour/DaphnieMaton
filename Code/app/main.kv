#:kivy 1.10.1
#:import _ assets.libraries.localization._


<ActionChoosing>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        id: box
        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text: _('Cancel')
                on_release: root.cancel()
            Button:
                text: _('New action')
                on_release: root.newAction()

<CustomGrid>:
    size_hint_y: None
    height: self.minimum_height
    spacing: 5
    padding: 10

<GridButton>:
    size_hint_y: None
    size_hint_max_x: 200
    height: self.width
    on_release: root.chose(path=root.path, filename=root.filename)

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: root.path
            filters: ['*.json', '*.ino']
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: _('Cancel')
                on_release: root.cancel()
            Button:
                text: _('Load')
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            path: root.path
            filters: ['*.json']
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: _('Cancel')
                on_release: root.cancel()
            Button:
                text: _('Save')
                on_release: root.save(filechooser.path, text_input.text)

<Input>:
    size_hint: (1, None)
    size: (200, 30)
    orientation: 'horizontal'

<Parametrage>:
    id: parametrage
    orientation:'vertical'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: _('DaphnieMaton')
                with_previous: False
                app_icon: 'assets\logoDark.ico'
                on_release: root.about_panel()
            ActionButton:
                id: fileButton
                text: _('File')
                on_release: root.show_file()
            ActionButton:
                id: port_button
                text: _('Port')
                on_release: root.show_port()
            ActionButton:
                text: _('Option')
                on_release: app.open_settings()
            ActionButton:
                text: '?'
                on_release: root.help()

    TabbedPanel:
        do_default_tab: False
        id: tabbedPanel
        TabbedPanelItem:
            text: _('Pipe template')
            name: 'Pipe'
            id: changeTab
            BoxLayout:
                BoxLayout:
                    id: pipeBack
                    ScrollView:
                        size_hint: (1, 1)
                        BoxLayout:
                            id: tuyeauInputs
                            orientation: 'vertical'
                            spacing: 5
                            size_hint_y: None
                            height: self.minimum_height
                            Input:
                                id: nbPipe
                                inputName: _('Number of pipes')
                                input_filter: 'int'
                                default_text: '2'
                                boundaries: [1, float('inf')]
                                callback: lambda *args: root.tuyeauGap()
                            Input:
                                id: lenPipe
                                inputName: _('Pipe lenght (m)')
                                input_filter: 'float'
                                default_text: '1'
                                boundaries: [0.01, float('inf')]
                                callback: lambda *args: root.update_rect()
                            Input:
                                id: photoPipe
                                inputName: _('Centimeter per picture')
                                input_filter: 'float'
                                default_text: '5'
                                boundaries: [0.1, float('inf')]
                                callback: lambda *args: root.pipeToFree()
                            Input:
                                id: distOriginX
                                inputName: _('Distance from origin X (cm)')
                                input_filter: 'float'
                                default_text: '5'
                                callback: lambda *args: root.update_rect()
                            Input:
                                id: distOriginY
                                inputName: _('Distance from origin Y (cm)')
                                input_filter: 'float'
                                default_text: '5' 
                                callback: lambda *args: root.update_rect()
                            Input:
                                id: horizontal
                                inputName: _('Pipes are horizontal')
                                inputType: 1
                                default_text: 'False'
                                callback: lambda *args: root.update_rect()
                            Input:
                                id: sameGap
                                inputName: _('Constant gap between pipes')
                                inputType: 1
                                default_text: 'False' 
                                callback: lambda *args: root.tuyeauGap()
                Splitter:
                    sizable_from: 'left'
                    strip_size: '5pt'
                    id: pipeSplitter
                    BoxLayout:
                        orientation: 'vertical'
                        Widget:
                            id: pipeDrawing
                            canvas.before:
                        BoxLayout:
                            size_hint: (1, None)
                            size: (200, 50)
                            spacing: 10
                            orientation: 'horizontal'
                            Button:
                                text: _('Upload')
                                on_release: root.chooseAction()
                            Button:
                                text: _('Copy to Free mode')
                                on_release: root.config.generatePathFromPipe(True)
        TabbedPanelItem:
            text: _('Free path')
            name: 'Free'
            BoxLayout:
                BoxLayout:
                    id: freeBack
                    ScrollView:
                        size_hint: (1, 1)
                        BoxLayout:
                            id: libreInputs
                            orientation: 'vertical'
                            spacing: 5
                            size_hint_y: None
                            height: self.minimum_height
                            Input:
                                id: loop
                                inputName: _('Loop')
                                inputType: 1
                                default_text: 'False'
                                callback: lambda *args: root.update_rect()
                            Input:
                                id: freePhotoPipe
                                inputName: _('Centimeter per picture')
                                input_filter: 'float'
                                default_text: '5' 
                                callback: lambda *args: root.freeToPipe()
                            Input:
                                id: coord
                                inputName: _('Coordinates (cm)')
                                default_text: '0 : 0'
                                callback: lambda *args: root.inputMove()
                            Input:
                                id: clear
                                inputName: _('Clear all nodes')
                                inputType: 2
                                default_text: 'Clear'
                                callback: lambda *args: root.removeAllNodes()
                Splitter:
                    sizable_from: 'left'
                    strip_size: '5pt'
                    id: libreSplitter
                    BoxLayout:
                        orientation: 'vertical'
                        Widget:
                            id: libreDrawing
                            on_touch_down: root.clickedDown(args[1])
                            on_touch_up: root.clickedUp(args[1])
                            on_touch_move: root.clickedMove(args[1])
                            canvas.before:
                        BoxLayout:
                            size_hint: (1, None)
                            size: (200, 50)
                            spacing: 10
                            orientation: 'horizontal'
                            Button:
                                text: _('Upload')
                                on_release: root.chooseAction()
        TabbedPanelItem:
            text: _('Direct control')
            name: 'Direct'
            BoxLayout:
                id: directSplitter
                BoxLayout:
                    id: directBack
                    orientation: 'vertical'
                    Widget:
                        id: directDrawing
                        canvas.before:
                    BoxLayout:
                        size_hint: (1, None)
                        size: (200, 50)
                        spacing: 10
                        orientation: 'horizontal'
                        Button:
                            text: _('Upload')
                            on_release: root.arduino.uploadProgram("Direct")